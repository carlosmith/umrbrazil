  <% end %>
  
  <fieldset>
    <label><b><%= I18n.t :name %></b></label>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :brand_name %></b></label>
    <%= f.text_field :brand_name %>
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :cnpj %></b></label>
    <%= f.text_field :cnpj %>
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :state_inscription %></b></label>
    <%= f.text_field :state_inscription %>
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :municipal_inscription %></b></label>
    <%= f.text_field :municipal_inscription %>
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :address %></b></label>
