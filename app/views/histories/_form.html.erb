<%= form_for(@history) do |f| %>
<div class="module_content">
  <% if @history.errors.any? %>
    <div id="error_explanation">
      <h4 class='alert_error'><%= pluralize(@history.errors.count, "error") %> prohibited this category from being saved:</h4>

      <ul>
      <% @history.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <label><b><%= t :company %></b></label>
    <%= f.text_field :company %>
  </fieldset>
  <fieldset>
    <label><b><%= t :entry_date %></b></label>
    <%= f.datetime_select :entry_date %>
  </fieldset>
  <fieldset>
    <label><b><%= t :exit_date %></b></label>
    <%= f.datetime_select :exit_date %>
  </fieldset>
  <fieldset>
    <label><b><%= t :description %></b></label>
    <%= f.text_area :description %>
  </fieldset>
  <fieldset>
    <label><b><%= t :prescription_drugs %></b></label>
    <%= f.text_area :prescription_drugs %>
  </fieldset>
</div>
<footer>
  <div class="submit_link">
    <%= f.submit %>
    <input type="reset" value="Reset">
    <%= link_to image_tag("icn_jump_back.png", alt: t(:back), title: t(:back)), histories_path %>
    <% if params[:action] == 'edit' %>
      <%= link_to image_tag("icn_folder.png", alt: t(:show), title: t(:show)), @history %>
    <% end %>
  </div>
</footer>
<% end %>
