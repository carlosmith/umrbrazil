<!-- Navbar
  ================================================== -->
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-menu">
      <% if current_user %>
        <div class="brand-right"><%= current_user.email %> <%= link_to I18n.t(:logout), logout_path, class: 'btn btn-danger' %> <%= link_to I18n.t(:dashboard), dashboard_path, class: 'btn' %></div>
      <% else %>
        <%= link_to 'Login', '#brand-right', class: 'brand-right' %>
        <div id="login_form">
          <%= form_for @user_session do |f| %>
            Login:<br /><%= f.text_field :login, size: 10 %><br>
            Senha:<br /><%= f.password_field :password, size: 10 %><br>
            <p><%= check_box :user_session, :remember_me %> Lembre-me <span><%= f.submit 'login' %></span></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

