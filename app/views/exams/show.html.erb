  <article class="module width_full">
    <header><h3><%= t :showing %></h3></header>
    <div class="tab_container">
      <div id="tab1" class="tab_content">
        <table class="tablesorter" cellspacing="0">
          <tr>
            <td><b><%= t :title %></b></td>
            <td><%= @exam.title %></td>
	  </tr>
          <tr>
            <td><b><%= t :description %></b></td>
            <td><%= @exam.description %></td>
	  </tr>
          <tr>
            <td><b><%= t :emission %></b></td>
            <td><%= @exam.emission %></td>
	  </tr>
          <tr>
            <td><b><%= t :user %></b></td>
            <td><%= @exam.user %></td>
	  </tr>
          <tr>
            <td><b><%= t :doctor %></b></td>
            <td><%= @exam.doctor %></td>
	  </tr>
          <tr>
            <td><b><%= t :crm %></b></td>
            <td><%= @exam.crm %></td>
	  </tr>
        </table>
      </div>
    </div>

    <footer>
      <div class="submit_link">
        <%= link_to image_tag("icn_edit_article.png", alt: t(:edit), title: t(:edit)), edit_exam_path(@exam) %>
        <%= link_to image_tag("icn_jump_back.png", alt: t(:back), title: t(:back)), exams_path %>
      </div>
    </footer>
  </article>
