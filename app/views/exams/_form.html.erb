<%= form_for(@exam) do |f| %>
<div class="module_content">
  <% if @exam.errors.any? %>
    <div id="error_explanation">
      <h4 class='alert_error'><%= pluralize(@exam.errors.count, "error") %> prohibited this category from being saved:</h4>

      <ul>
      <% @exam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <label><b><%= t :title %></b></label>
    <%= f.text_field :title %>
  </fieldset>
  <fieldset>
    <label><b><%= t :description %></b></label>
    <%= f.text_area :description %>
  </fieldset>
  <fieldset>
    <label><b><%= t :emission %></b></label>
    <%= f.datetime_select :emission %>
  </fieldset>
  <fieldset>
    <label><b><%= t :user %></b></label>
    <%= f.text_field :user %>
  </fieldset>
  <fieldset>
    <label><b><%= t :doctor %></b></label>
    <%= f.text_field :doctor %>
  </fieldset>
  <fieldset>
    <label><b><%= t :crm %></b></label>
    <%= f.text_field :crm %>
  </fieldset>
</div>
<footer>
  <div class="submit_link">
    <%= f.submit %>
    <input type="reset" value="Reset">
    <%= link_to image_tag("icn_jump_back.png", alt: t(:back), title: t(:back)), exams_path %>
    <% if params[:action] == 'edit' %>
      <%= link_to image_tag("icn_folder.png", alt: t(:show), title: t(:show)), @exam %>
    <% end %>
  </div>
</footer>
<% end %>
